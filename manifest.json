{
  "manifest_version": 3,
  "name": "bm-friendlist",
  "version": "3.0",
  "description": "Extension shows steam friends on battlemetrics RCON.",
  "author": "FlQyD",
  "content_scripts": [
    {
      "matches": [
        "https://www.battlemetrics.com/*"
      ],
      "run_at": "document_start",
      "js": [
        "./main.js"
      ],
      "css": [
        "./main.css"
      ]
    }
  ],
  "background": {
    "service_worker": "bg/serviceWorker.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/check.png",
        "images/danger.png",
        "images/unknown.png",
        "images/noSignal.png",
        "images/settings.png",
        "modules/setup.js",
        "modules/display.js",
        "modules/settings.js"
      ],
      "matches": [
        "*://www.battlemetrics.com/*",
        "*://battlemetrics.com/*"
      ]
    }
  ],
  "host_permissions": [
    "*://api.battlemetrics.com/*",
    "*://api.steampowered.com/*",
    "*://rust-api.flqyd.dev/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ]
}